@exampleCode["name-widget"
  #:deps "wmsy-prolog"
@js{
  wy.defineWidget({
    name: "person",
    constraint: {
      type: "person",
    },
    popups: {
      details: {
        constraint: {
        
        },
        clickAway: true,
        position: {
        },
      },
    },
  });
}]

